# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 80

[*.cs]
csharp_new_line_before_open_brace = none

[*.md]
trim_trailing_whitespace = false